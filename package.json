    "tslint-react": "^3.6.0",
    "tslint-react-a11y": "^1.0.0",
    "tslint-react-perf": "^0.2.1",
    "typedoc": "^0.14.0",
    "typedoc-plugin-external-module-name": "^1.1.3",
    "typescript": "^3.2.2",
    "unified": "^7.0.0",
    "unist-builder": "^1.0.2",
    "webfontloader": "^1.6.28",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.7",
    "webpack-merge": "^4.1.4",
    "yargs": "^12.0.0"
  },
  "engines": {
    "node": ">=8.12.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "applications/*",
      "applications/jupyter-extension/nteract_on_jupyter"
    ],
    "nohoist": [
      "**/nteract/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
