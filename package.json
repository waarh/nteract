    "remark-parse": "^5.0.0",
    "remark-stringify": "^5.0.0",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "shell-env": "^2.0.0",
    "spawn-rx": "^3.0.0",
